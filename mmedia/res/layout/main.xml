<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        >
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MediaPlayer"
            android:onClick="onClick"
            android:id="@+id/audio_btn" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SoundPool"
            android:onClick="onClick"
            android:id="@+id/soundPool_btn" android:layout_below="@+id/audio_btn"
            android:layout_alignStart="@+id/video_btn"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="VideoView"
            android:id="@+id/video_btn"
            android:layout_below="@+id/soundPool_btn" android:layout_centerHorizontal="true"/>
</RelativeLayout>

